/*Переставить элементы массива Х так, чтобы сначала шли отрицательные элементы,
затем положительные элементы, затем нули, причём сохранить порядок элементов в каждой из этих групп
Тесты: 51, 6, -60, -65, -35, 0, -7, 17, -83, 18, -11, -84, 93, 27, 20
1, 0, 0, 0, 0, 0*/
#include <stdio.h>

int main() {
	int temp = 0;
	int numbers[] = {1, 0, 0, 0, 0, 0};
	int n = sizeof(numbers) / sizeof(numbers[0]);
	int i, j, tmp;
	j = 0;
	for (i = 0; i < n; i++) {
		if (numbers[i] < 0) {
			if (i != j) {
				tmp = numbers[i];
				numbers[i] = numbers[j];
				numbers[j] = tmp;
			}
			j++;
		}
	}
	for (i = j; i < n; i++) {
		if (numbers[i] > 0) {
			if (i != j) {
				tmp = numbers[i];
				numbers[i] = numbers[j];
				numbers[j] = tmp;
			}
			j++;
		}
	}
	for (i = j; i < n; i++) {
		if (numbers[i] == 0) {
			if (i != j) {
				tmp = numbers[i];
				numbers[i] = numbers[j];
				numbers[j] = tmp;
			}
			j++;
		}
	}
	for (int i = 0; i < n; i++) {
		printf("%d, ", numbers[i]);
	}
	return 0;
}
